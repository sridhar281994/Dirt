<ChooseScreen>:
    name: "choose"
    FloatLayout:
        BoxLayout:
            size_hint: 1, None
            height: dp(56)
            pos_hint: {"top": 1}
            padding: dp(10)
            spacing: dp(10)

            Label:
                text: "Choose"
                size_hint_x: 0.35
                color: 1, 1, 1, 1

            Spinner:
                id: pref_spinner
                text: "both"
                values: ["male", "female", "both"]
                size_hint_x: 0.25
                on_text: root.set_preference(self.text)

            Button:
                text: "Subscribe"
                size_hint_x: 0.2
                on_release: root.subscribe()

            Button:
                text: "Logout"
                size_hint_x: 0.2
                on_release: root.logout()

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.92, 0.72
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(14)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.45
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [18]

            BoxLayout:
                size_hint_y: None
                height: dp(32)
                Label:
                    text: root.current_name
                    halign: "left"
                    valign: "middle"
                    text_size: self.size
                Label:
                    text: root.current_country
                    halign: "right"
                    valign: "middle"
                    text_size: self.size

            AsyncImage:
                source: root.current_image_url if root.current_image_url else ""
                allow_stretch: True
                keep_ratio: True
                size_hint_y: None
                height: dp(220)

            Label:
                text: root.current_desc
                valign: "top"
                text_size: self.width, None

            BoxLayout:
                size_hint_y: None
                height: dp(52)
                spacing: dp(10)
                Button:
                    text: "Swipe Left"
                    on_release: root.swipe_left()
                Button:
                    text: "Swipe Right"
                    on_release: root.swipe_right()

            BoxLayout:
                size_hint_y: None
                height: dp(56)
                spacing: dp(10)
                Button:
                    text: "Chat"
                    on_release: root.start_chat("text")
                Button:
                    text: "Video"
                    on_release: root.start_chat("video")

<ChatScreen>:
    name: "chat"
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(8)

        BoxLayout:
            size_hint_y: None
            height: dp(44)
            spacing: dp(10)
            Button:
                text: "Back"
                size_hint_x: None
                width: dp(90)
                on_release: root.go_back()
            Label:
                text: "Chat (" + root.mode + ")"

        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: messages_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(6)

        BoxLayout:
            size_hint_y: None
            height: dp(46)
            spacing: dp(8)
            TextInput:
                id: message_input
                hint_text: "Type message"
                multiline: False
            Button:
                text: "Send"
                size_hint_x: None
                width: dp(90)
                on_release: root.send_message()

<VideoScreen>:
    name: "video"

    BoxLayout:
        orientation: "vertical"
        padding: dp(14)
        spacing: dp(10)

        BoxLayout:
            size_hint_y: None
            height: dp(44)
            spacing: dp(10)

            Button:
                text: "Back"
                size_hint_x: None
                width: dp(90)
                on_release: root.go_back()

            Label:
                text: "Video chat"

        Label:
